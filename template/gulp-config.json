{
  "theme": "dvfgi",
  "proxy": "http://local.www.demo-project.net",
  "fileConcat": ".",
  "src": "src",
  "dest": "dist",
  "css": {
    "src": "src/sass/**/*.scss",
    "path": "src/sass",
    "style": "expanded",
    "fontSizeRoot": 16,
    "autoprefix": [
      "last 2 version"
    ],
    "dest": "../public/css",
    "includes": [
      "node_modules/normalize-libsass",
      "node_modules/breakpoint-sass/stylesheets",
      "node_modules/singularitygs/stylesheets"
    ],
    "lintIgnore": [
      "src/sass/variables/_image-map.scss",
      "src/sass/variables/_sprites/*"
    ],
    "files": {
      "vendor": "vendor.css"
    },
    "vendor": []
  },
  "img": {
    "src": [
      "src/images/**/*.+(jpeg|jpg|png|gif|svg)"
    ],
    "dest": "dist/images",
    "srcPath": "src/images/",
    "sprites": {
      "padding": 5,
      "files": [
        "icons/*.png",
        "avatars/*.jpg"
      ],
      "split": true
    }
  },
  "font": {
    "dest": "fonts"
  },
  "js": {
    "concat": false,
    "src": [
      "src/js/**/*.+(js|jsx)"
    ],
    "dest": "dist/js",
    "lint": [
      "gulpfile.js",
      "src/js/**/*.+(js|jsx)"
    ],
    "globals": [
      "Drupal",
      "Modernizr",
      "jQuery"
    ],
    "files": {
      "custom": "scripts.js",
      "vendor": "vendor.js"
    },
    "vendor": [],
    "presets": [
      [
        "env",
        {
          "targets": {
            "browsers": [
              "last 2 versions"
            ]
          }
        }
      ]
    ]
  },
  "modernizr": {
    "options": [
      "setClasses",
      "addTest",
      "prefixes",
      "testStyles"
    ],
    "tests": [
      "details",
      "inputtypes",
      "flexbox",
      "objectfit",
      "picture",
      "touchevents"
    ],
    "files": {
      "custom": "modernizr.custom.js"
    }
  },
  "lib": {
    "src": [
      "src/lib/jquery/dist/jquery.min.js"
    ],
    "dest": "dist/lib"
  },
  "clean": []
}
